@model Yusuf.Zerdazi.Web.Models.Everyday

@{
    ViewData["Title"] = "Create";
    ViewData["Title-Image"] = "yusuf";
}

@section Styles {
    <link href="@Url.Content("~/css/everydays.css")" rel="stylesheet" />
}

<h2>Create Everyday</h4>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Date" class="control-label"></label>
                <input asp-for="Date" class="form-control" value="@(ViewData["date"])"/>
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="OriginalAudio" /> @Html.DisplayNameFor(model => model.OriginalAudio)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="OriginalImage" /> @Html.DisplayNameFor(model => model.OriginalImage)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="SourceImageTitle" class="control-label"></label>
                <input asp-for="SourceImageTitle" class="form-control" />
                <span asp-validation-for="SourceImageTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SourceAudio" class="control-label"></label>
                <input asp-for="SourceAudio" class="form-control" />
                <span asp-validation-for="SourceAudio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
